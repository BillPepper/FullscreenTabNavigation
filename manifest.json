{
  "name": "Full Screen Tab Navigation",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Use Tabs with the Fullscreen view",
  "homepage_url": "http://flawlesslogic.net",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": ["tabs"]
}
